{
    "name": "animethemes/animethemes-server",
    "type": "project",
    "description": "AnimeThemes.moe resource management & API",
    "keywords": [
        "anime",
        "animethemes"
    ],
    "homepage": "https://animethemes.moe/",
    "readme": "README.md",
    "license": "MIT",
    "support": {
        "email": "admin@animethemes.moe"
    },
    "funding": [
        {
            "type": "patreon",
            "url": "https://www.patreon.com/AnimeThemes"
        }
    ],
    "require": {
        "php": "^8.5",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-pdo": "*",
        "ajcastro/eager-load-pivot-relations": "^0.3.0",
        "awcodes/recently": "3.0",
        "babenkoivan/elastic-migrations": "^3.4.1",
        "babenkoivan/elastic-scout-driver-plus": "^4.8",
        "bepsvpt/secure-headers": "^7.5",
        "elemind/filament-echarts": "^1.1",
        "fakerphp/faker": "^1.24.1",
        "filament/filament": "^5.2.0",
        "flowframe/laravel-trend": ">=0.4",
        "guzzlehttp/guzzle": "^7.10.0",
        "kyrch/laravel-prohibitions": "^1.1.0",
        "larastan/larastan": "^3.9.2",
        "laravel-notification-channels/discord": "^1.7",
        "laravel/fortify": "^1.34.0",
        "laravel/framework": "^12.49.0",
        "laravel/horizon": "^5.43.0",
        "laravel/pennant": "^1.19.0",
        "laravel/pulse": "^1.5.0",
        "laravel/sanctum": "^4.3.0",
        "laravel/scout": "^10.23.1",
        "laravel/tinker": "^2.11.0",
        "league/flysystem-aws-s3-v3": "^3.31.0",
        "mll-lab/graphql-php-scalars": "^6.4.1",
        "mll-lab/laravel-graphiql": "^3.3.4",
        "owen-it/laravel-auditing": "^14.0.0",
        "propaganistas/laravel-disposable-email": "^2.4.23",
        "rebing/graphql-laravel": "^9.14",
        "spatie/db-dumper": "^3.8.3",
        "spatie/laravel-permission": "^6.24.0",
        "staudenmeir/belongs-to-through": "^2.17",
        "staudenmeir/eloquent-has-many-deep": "1.21.1",
        "staudenmeir/laravel-adjacency-list": "^1.25.2",
        "symfony/http-client": "^6.4.33",
        "symfony/mailgun-mailer": "^6.4.24",
        "vinkla/hashids": "^13.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.5",
        "driftingly/rector-laravel": "^2.1.9",
        "laravel/pint": "^1.27.0",
        "laravel/sail": "^1.52.0",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^4.3.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "predis/predis": "^2.4.1",
        "rector/rector": "^2.3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "ext-pcntl": "8.5",
            "ext-posix": "8.5"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan db:sync",
            "@php artisan optimize"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan clear",
            "composer bump"
        ],
        "lint": [
            "rector",
            "pint"
        ],
        "test:lint": [
            "pint --test",
            "rector --dry-run"
        ],
        "test:types": "./vendor/bin/phpstan analyse --memory-limit=-1"
    }
}
